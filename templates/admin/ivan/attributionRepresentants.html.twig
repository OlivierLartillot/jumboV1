{% extends 'base.html.twig' %} 

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">

        <form action={{ path('app_admin_ivan') }} method="GET">
            <input name="date" type="date" value="{{date | date('Y-m-d') }}">
            <input type="submit">
        </form>

        <a href="{{ path('app_admin_ivan_replist') }}" class="btn btn-secondary my-3">Liste des Rep</a>




    {% if notClient is defined %} 
        
          <p>Pas ou plus de client à attribuer pour cette date.</p>

        {% else %}

            <p>Il reste encore {{ countNonAttributedClients }} client(s)  à attribuer </p>

            <div class="mb-3">
            Hôtel:
                        {% for infosTransfer in firstClient.transfers %}
                            <strong>{{ infosTransfer.toArrival}}</strong>
                        {% endfor %} <br>

                   

                Name: <b>{{ firstClient.holder }}</b> <br>
                Date: <b>{{ firstClient.meetingAt | date('d-m-Y') }}</b>
            </div>

        {{ form(form) }}
    {% endif %}
    </div>

{% endblock %}
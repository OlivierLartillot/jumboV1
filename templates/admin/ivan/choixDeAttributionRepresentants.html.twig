{% extends 'base.html.twig' %} 

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <form action={{ path('app_admin_ivan') }} method="GET">
            <input name="date" type="date" value="{{date | date('Y-m-d') }}">
            <input type="submit">
        </form>

    {% if notClient is defined %} 
        
            Tu as attribué tous les clients

        {% else %}

            <p>Il reste encore {{ countNonAttributedClients }} client(s)  à attribuer </p>

            <div class="mb-3">

                Name: <b>{{firstClient.holder}}</b> <br>
                Date: <b>{{ firstClient.meetingAt | date('d-m-Y') }}</b>
            </div>


        {{ form(form) }}
    {% endif %}
    </div>

{% endblock %}